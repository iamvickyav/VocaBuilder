<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/enter_the_word"
        android:text="" />

    <EditText
        android:id="@+id/meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/word"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/enter_the_meaning"
        android:text="" />

    <EditText
        android:id="@+id/tamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meaning"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/enter_tamil_meaning"
        android:text="" />

    <EditText
        android:id="@+id/example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tamil"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:hint="@string/example_if_any"
        android:text="" />

    <Button
        android:id="@+id/addToDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/example"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/add_to_db" />

</RelativeLayout>